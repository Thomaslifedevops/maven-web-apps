//scripted
node(""){
def MHD = tool name: "maven3.9.2"
stage('GitClone'){
sh "echo this is git clone"
git branch: 'master', credentialsId: 'git-hub', url: 'https://github.com/Thomasoluu/maven-web-apps.git'
}
stage('Build'){
sh "echo start of build process"
sh "${MHD}/bin/mvn package"
}
stage('DeploytoTomcat'){
sh "echo Deploy to Tomcat server"
deploy adapters: [tomcat9(credentialsId: 'tomcat-cred', path: '', url: 'http://52.207.252.230:5000/')], contextPath: null, war: 'target/*war'
}
}
